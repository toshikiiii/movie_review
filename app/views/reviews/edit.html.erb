<h2>レビューを編集</h2>

<%= form_with model: [@movie, @review], local: true do |f| %>
  <div>
    <%= f.label :rating, "評価(1.0-5.0)" %><br>
    <%= f.number_field :rating, in: 1.0..5.0, step: 0.1 %>
  </div>
  <div>
    <%= f.label :comment, "コメント" %><br>
    <%= f.text_area :comment, rows: 3 %>
  </div>
  <%= f.submit "更新する" %>
<% end %>

<p style="margin-top:12px;">
  <%= link_to "映画詳細に戻る", @movie %>
</p>